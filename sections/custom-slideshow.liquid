
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1" />
  <style scoped>
    .slideshow {
      width: 100%;
      height: 100%;
      position: relative;
    }
  
    .slideshow .swiper-slide {
      text-align: center;
      font-size: 18px;
      background: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  
    .slideshow .swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
  
    .slideshow .swiper-pagination-progressbar .swiper-pagination-progressbar-fill {
      background: red;
    }
  
    .slideshow .swiper-pagination.swiper-pagination-progressbar {
      position: relative;
    }
  </style>
  
</head>

<body>
<div class="page-width">
<div class="swiper slideshow">
<div class="swiper-wrapper">
  {%- for block in section.blocks -%}
    <div class="swiper-slide" {{ section.settings.slide_height }}>
      <img src="{{ block.settings.image | img_url: 'master' }}" style="height: {{ block.settings.image_height }}rem;">
    </div>
  {%- endfor -%}
  </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-pagination"></div>
  </div>
  </div>

  <script>
    var swiper = new Swiper(".slideshow", {
      loop: true,
      pagination: {
        el: ".slideshow .swiper-pagination",
        type: "progressbar",
      },
      navigation: {
        nextEl: ".slideshow .swiper-button-next",
        prevEl: ".slideshow .swiper-button-prev",
      },
      autoplay: {
        enabled: true,
        delay: 5000,
      }

      
    });
    console.log(swiper)
  </script>
</body>

</html>


{% schema %}
  {
    "name": "Custom Slideshow",
    "settings": [],
   "blocks": [
  {
    "type": "slide",
    "name": "Slide",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "range",
        "id": "image_height",
        "label": "Image height (rem)",
        "min": 10,
        "max": 100,
        "step": 10,
        "default": 10
      },
      {
      "type": "select",
      "id": "slide_height",
      "label": "Wysokość slajdu",
      "options": [
        { "value": "small", "label": "Mały" },
        { "value": "medium", "label": "Średni" },
        { "value": "large", "label": "Duży" }
      ],
    }
    ]
  }
],
    "max_blocks": 10,
    "presets": [
      {
        "name": "Custom Slideshow",
        "category": "Slideshow"
      }
    ]
  }
  {% endschema %}
  