{{ 'section-footer-custom.css' | asset_url | stylesheet_tag }}

<footer class="footer">
  <div class="container">
    <div class="footer__content page-width">
      <div class="footer__section">
        <h4>{{ section.settings.brand_title | escape -}}</h4>
        <p>{{ section.settings.brand_description }}</p>
      </div>
      <div class="footer__section">
        <h4>{{ section.settings.categories_title }}</h4>
        {% if section.settings.categories_menu != blank %}
          <ul>
            {% for link in linklists[section.settings.categories_menu].links %}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        {% else %}
          <p>Brak kategorii.</p>
        {% endif %}
      </div>
      <div class="footer__section">
        <h4>{{ section.settings.help_title }}</h4>
        {% if section.settings.help_menu != blank %}
          <ul>
            {% for link in linklists[section.settings.help_menu].links %}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
      <div class="footer__section">
        <h4>{{ section.settings.contact_title }}</h4>
        <p><i class="fas fa-map-marker-alt"></i> {{ section.settings.contact_address }}</p>
        <p><i class="fas fa-phone"></i> {{ section.settings.contact_phone }}</p>
        <p><i class="fas fa-envelope"></i> {{ section.settings.contact_email }}</p>
      </div>
    </div>
    <div class="footer__bottom">
      <small class="copyright__content"
        >&copy; {{ 'now' | date: '%Y' }}, {{ section.settings.brand_title | escape -}}
      </small>

      {%- if section.settings.show_policy -%}
        <ul class="policies list-unstyled">
          {%- for policy in shop.policies -%}
            {%- if policy != blank -%}
              <li>
                <small class="copyright__content">
                  <a href="{{ policy.url }}">{{ policy.title | escape }}</a>
                </small>
              </li>
            {%- endif -%}
          {%- endfor -%}
        </ul>
      {%- endif -%}
    </div>
  </div>
</footer>
{% style %}
{% endstyle %}

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "brand_title",
      "label": "Tytuł marki",
      "default": "SM-MOTO"
    },
    {
      "type": "textarea",
      "id": "brand_description",
      "label": "Opis marki",
      "default": "Twój partner w świecie motocykli. Najwyższa jakość produktów i profesjonalne doradztwo."
    },
    {
      "type": "text",
      "id": "categories_title",
      "label": "Tytuł kategorii",
      "default": "Kategorie"
    },
    {
      "type": "link_list",
      "id": "categories_menu",
      "label": "Menu kategorii"
    },
    {
      "type": "text",
      "id": "help_title",
      "label": "Tytuł pomocy",
      "default": "Pomoc"
    },
    {
      "type": "link_list",
      "id": "help_menu",
      "label": "Menu pomocy"
    },
    {
      "type": "text",
      "id": "contact_title",
      "label": "Tytuł kontaktu",
      "default": "Kontakt"
    },
    {
      "type": "textarea",
      "id": "contact_address",
      "label": "Adres kontaktowy",
      "default": "ul. Motocyklowa 123, Warszawa"
    },
    {
      "type": "text",
      "id": "contact_phone",
      "label": "Telefon",
      "default": "+48 123 456 789"
    },
    {
      "type": "text",
      "id": "contact_email",
      "label": "E-mail",
      "default": "info@motostore.pl"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Schemat kolorów",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margines górny",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding górny",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding dolny",
      "default": 36
    },
    {
      "type": "checkbox",
      "id": "show_policy",
      "label": "Pokaż polityki sklepu",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "category": "Footer"
    }
  ]
}
{% endschema %}
